{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "language": "japanese",
  "permissions": {
    "allow": [
      "Bash(git *)",
      "WebFetch",
      "WebSearch"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(git checkout .)",
      "Bash(git restore .)"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)",
      "Read(**/credentials*)",
      "Read(**/.ssh/**)",
      "Read(**/.gnupg/**)",
      "Read(**/.aws/credentials)",
      "Read(**/.npmrc)",
      "Read(**/.pypirc)",
      "Read(**/.netrc)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*.p12)",
      "Read(**/*.pfx)",
      "Read(**/*.keystore)",
      "Bash(git push * --force *)",
      "Bash(git push --force *)",
      "Bash(git push * -f *)",
      "Bash(git push -f *)",
      "Bash(git reset --hard *)",
      "Bash(git clean *)",
      "Bash(rm -rf *)"
    ]
  }
}
