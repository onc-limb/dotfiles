{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(ls *)",
      "Bash(pwd)",
      "Bash(which *)",
      "Bash(type *)",
      "Bash(file *)",
      "Bash(wc *)",
      "Bash(tree *)",
      "Bash(stat *)",
      "Bash(uname *)",
      "Bash(whoami)",
      "Bash(realpath *)",
      "Bash(readlink *)",
      "Bash(du *)",
      "Bash(diff *)",
      "Bash(gh *)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)",
      "Read(**/credentials*)",
      "Read(**/.ssh/**)",
      "Read(**/.gnupg/**)",
      "Read(**/.aws/credentials)",
      "Read(**/.npmrc)",
      "Read(**/.pypirc)",
      "Read(**/.netrc)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*.p12)",
      "Read(**/*.pfx)",
      "Read(**/*.keystore)",
      "Edit(**/.env)",
      "Edit(**/.env.*)",
      "Edit(**/secrets/**)",
      "Edit(**/credentials*)",
      "Edit(**/*.pem)",
      "Edit(**/*.key)",
      "Edit(**/*.p12)",
      "Edit(**/*.pfx)",
      "Edit(**/*.keystore)",
      "Write(**/.env)",
      "Write(**/.env.*)",
      "Write(**/secrets/**)",
      "Write(**/credentials*)",
      "Write(**/*.pem)",
      "Write(**/*.key)",
      "Edit(~/.bashrc)",
      "Edit(~/.zshrc)",
      "Edit(~/.bash_profile)",
      "Edit(~/.zprofile)",
      "Edit(//etc/**)",
      "Edit(//usr/**)",
      "Edit(//bin/**)",
      "Edit(//sbin/**)",
      "Bash(git push * --force *)",
      "Bash(git push --force *)",
      "Bash(git push * -f *)",
      "Bash(git push -f *)",
      "Bash(git reset --hard *)",
      "Bash(git clean *)",
      "Bash(rm -rf *)"
    ],
    "ask": ["Bash(git push *)", "Bash(git checkout .)", "Bash(git restore .)"],
    "defaultMode": "plan"
  },
  "language": "japanese",
  "skipDangerousModePermissionPrompt": true
}
